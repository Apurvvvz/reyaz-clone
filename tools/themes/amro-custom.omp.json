{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#45F1C2",
          "properties": {
            "display_host": false,
            "prefix": "\uf508 ",
            "postfix": " <#ffffff>at</>"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#0CA0D8",
          "properties": {
            "style": "full",
            "prefix": " \uf07b ",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#b4e152",
          "properties": {
            "display_status": true,
            "prefix": "<#ffffff>on </>",
            "postfix": "",
            "ahead_color": "red",
            "behind_color": "green",
            "working_color": "#cd5e42",
            "staging_color": "yellow",
            "local_changes_color": "#cd5e42",
            "ahead_and_behind_color": "red",
            "color_background": false,
            "display_stash_count": true,
            "display_upstream_icon": false,
            "status_colors_enabled": true
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#fee761",
          "properties": {
            "prefix": " \uE235 ",
            "display_version": true,
            "display_mode": "files",
            "display_virtual_env": false
          }
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#4363f1",
          "properties": {
            "prefix": "<#4363f1>[</>\uFD31 ",
            "template": "<#f34e4e>{{.Context}}</> | <#ffffff>{{if .Namespace}}{{.Namespace}}{{else}}default{{end}}</><#f34e4e>]</>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "background": "transparent",
          "foreground": "#ff8686",
          "properties": {
            "style": "austin",
            "threshold": 0,
            "prefix": "\ufa1e"
          },
          "style": "plain",
          "type": "executiontime"
        },
        {
          "background": "transparent",
          "foreground": "#98fdd3",
          "properties": {
            "time_format": "\uf64f Monday - 02/01/2006 <#ffffff>(</>03:04 PM<#ffffff>)</>"
          },
          "style": "plain",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#cd5e42",
          "properties": {
            "prefix": "",
            "root_icon": "\ue3bf"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#CD4277",
          "properties": {
            "prefix": "",
            "text": "\u0023"
          }
        }
      ]
    }
  ]
}
